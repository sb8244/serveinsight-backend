</table><!-- /.jumbotron -->
<table class="content" width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody>
    <tr>
      <td class="content_cell" align="center" valign="top">
          <!--[if (gte mso 9)|(IE)]>
          <table width="580" border="0" cellspacing="0" cellpadding="0" align="center" style="vertical-align: top;">
            <tbody>
              <tr>
                <td width="580" align="center" valign="top">
          <![endif]-->
          <div class="row">
            <!--[if (gte mso 9)|(IE)]>
            <table width="580" border="0" cellspacing="0" cellpadding="0" align="center" style="vertical-align: top;">
              <tbody>
                <tr>
                  <td width="580" align="center" valign="top">
            <![endif]-->
            <div class="col-3">
              <table class="column" width="100%" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                  <tr>
                    <td class="column_cell font_default" align="center" valign="top">
                      <p class="lead">
                        <% if @mentionable.class == Answer %>
                          <h5 class="mt8"><%= @mentionable.question_content %></h5>
                          <p><%= @mentionable.content %></p>
                        <% elsif @mentionable.class == Goal %>
                          <h5 class="mt8"><%= Goal::GOAL_QUESTION %></h5>
                          <p><%= @mentionable.content %></p>
                        <% elsif @mentionable.class == Comment %>
                          <p><%= @mentionable.comment %></p>
                        <% end %>
                      </p>
                      <table class="primary_btn" align="center" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                          <tr>
                            <td class="font_default"><a href="<%= mention_url(@mention) %>">
                              <span>View <%= @mentionable.class.name %></span>
                            </a></td>
                          </tr>
                        </tbody>
                      </table><!-- end .primary_btn -->
                    </td><!-- /.column_cell -->
                  </tr>
                </tbody>
              </table><!-- /.column -->
            </div><!-- /.col-3 -->
            <!--[if (gte mso 9)|(IE)]>
                  </td>
                </tr>
              </tbody>
            </table>
            <![endif]-->
          </div><!-- /.row -->
          <!--[if (gte mso 9)|(IE)]>
                </td>
              </tr>
            </tbody>
          </table>
          <![endif]-->
      </td><!-- /.content_cell -->
    </tr>
  </tbody>
</table><!-- /.content -->
